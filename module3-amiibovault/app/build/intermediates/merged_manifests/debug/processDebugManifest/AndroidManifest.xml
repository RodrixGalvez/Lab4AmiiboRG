<?xml version="1.0" encoding="utf-8"?>
<!--
============================================================================
AMIIBO VAULT - Android Manifest
============================================================================
El AndroidManifest.xml es el archivo de configuración principal de la app.
Define:
1. Permisos requeridos
2. Componentes de la app (Activities, Services, etc.)
3. Configuración de la aplicación

IMPORTANTE: El permiso INTERNET es necesario para:
- Retrofit: Hacer llamadas HTTP a la API
- Coil: Descargar imágenes de la red
============================================================================
-->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.curso.android.module3.amiibo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="24"
        android:targetSdkVersion="36" />

    <!--
    =========================================================================
    PERMISOS
    =========================================================================
    INTERNET: Permiso para acceder a la red
    - Es un "permiso normal" (no requiere aprobación del usuario en runtime)
    - Necesario para Retrofit (API calls) y Coil (carga de imágenes)
    =========================================================================
    -->
    <uses-permission android:name="android.permission.INTERNET" />

    <permission
        android:name="com.curso.android.module3.amiibo.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.curso.android.module3.amiibo.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION" />

    <application
        android:name="com.curso.android.module3.amiibo.AmiiboApplication"
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:extractNativeLibs="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.AmiiboVault"
        android:usesCleartextTraffic="true" >

        <!--
        =====================================================================
        NOTA sobre usesCleartextTraffic:
        =====================================================================
        - Por defecto, Android 9+ bloquea tráfico HTTP (no HTTPS)
        - La API de Amiibo usa HTTPS, pero lo habilitamos por si acaso
        - En producción, siempre usar HTTPS y deshabilitar esto
        =====================================================================
        -->

        <activity
            android:name="com.curso.android.module3.amiibo.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.AmiiboVault" >

            <!--
            =================================================================
            Intent Filter: Define esta Activity como punto de entrada
            =================================================================
            - MAIN: Es la acción principal
            - LAUNCHER: Aparece en el launcher del dispositivo
            =================================================================
            -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.curso.android.module3.amiibo.androidx-startup"
            android:exported="false" >
            <meta-data
                android:name="androidx.emoji2.text.EmojiCompatInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.lifecycle.ProcessLifecycleInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.profileinstaller.ProfileInstallerInitializer"
                android:value="androidx.startup" />
        </provider>

        <activity
            android:name="androidx.compose.ui.tooling.PreviewActivity"
            android:exported="true" />

        <service
            android:name="androidx.room.MultiInstanceInvalidationService"
            android:directBootAware="true"
            android:exported="false" />

        <receiver
            android:name="androidx.profileinstaller.ProfileInstallReceiver"
            android:directBootAware="false"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.DUMP" >
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.INSTALL_PROFILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.SKIP_FILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.SAVE_PROFILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.BENCHMARK_OPERATION" />
            </intent-filter>
        </receiver>
    </application>

</manifest>